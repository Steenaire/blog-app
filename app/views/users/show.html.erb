<h1><%= @user.name %>'s Blog Posts</h1>
<% if current_user&&(@user.id == current_user.id) %>
  <a href="/posts/new"><p>Create a New Post</p></a>
  <a href="/categories/new"><p>Create new category</p></a>
<% end %>
<% @user.posts.each do |post| %>
  <a href="/posts/<%= post.id %>"><p><%= post.title %></p></a>
<% end %>