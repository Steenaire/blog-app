<h1>Write a new Post</h1>
<%= form_tag '/posts', method: :post do %>
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :content %>
    <%= text_field_tag :content %>
  </div>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= submit_tag "Publish" %>
<% end %>