<% if current_user.id == @post.user_id %>
  <h1>Edit Post</h1>
  <%= form_tag "/posts/#{@post.id}", method: :patch do %>
    <div>
      <%= label_tag :title %>
      <%= text_field_tag :title, @post.title %>
    </div>
    <div>
      <%= label_tag :content %>
      <%= text_field_tag :content, @post.content %>
    </div>
  <%= submit_tag "Edit" %>
  <% end %>
<% end %>